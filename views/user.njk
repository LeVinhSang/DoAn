{% extends 'layout-user.njk' %}

{% block title %}
Home
{% endblock %}

{% block content %}
<section>
    <div style="margin-top: -50px;
   background-image: url(https://www.brisbane.qld.gov.au/sites/default/files/styles/event_hero/public/trumba/events/dgdzhbdbnghqvvogxw8biu7o_40.jpg?itok=kTGq3lJ3);
   -webkit-background-size: cover;
   background-size: cover;
   background-repeat: no-repeat;
   background-position: center center;
   width: 100%;
   height: 300px;
           ">
    </div>
</section>
<section>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Contact</h4>
                </div>
                <div class="modal-body">
                   <form>
                       <p>Phone:</p>
                       <p><u>01648021510</u></p>
                   </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</section>


<!-------------------------------------------------------------------------------------------------------------------->

<section>
    <div class="modal fade" id="loginModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Login</h4>
                </div>
                <div class="modal-body">
                    <div>
                        <h2 style="color: blue">Login to Your Account</h2>
                        <p><input id="name" placeholder="userName" required class="form-control input-lg" /></p>
                        <p><input type="password" id="password" placeholder="Password" required class="form-control input-lg" /></p>
                        <button type="submit" id="login" class="btn btn-lg btn-primary btn-block">Sign in</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-------------------------------------------------------------------------------------------------------------------->

<div class="container-fluid">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel-body">
            <section id="all">
                <ul id="book-list" class="list-group">
                </ul>
            </section>
            <script id="bookTemplate" type="text/html">
                <ul class="list-group">
                    <li class="list-group-item list-group-item-action" id="get-detail" align="center" >
                        <p><img height="250px" width="200px" class="group list-group-image" src=":book.images:">
                        <h4 class="group inner list-group-item-heading" style="color: blue">:bookTitle:</h4>
                        <p class="list-group-item-text">Author : :author:</p>
                        <p><a data-toggle="modal" data-target="#myModal" class="btn btn-primary btn-block" id=":book:id"  href="#">
                            <i class="glyphicon glyphicon-phone"></i>
                            <span class="hidden-sm hidden-xs">Contact</span>
                        </a></p>
                    </li>
                </ul>
            </script>

            <script id="bookTemplate" type="text/html">
                <option value=":book.id:">:book.title:</option>
            </script>
        </div>
    </div>
</div>

{% endblock %}
<script src="/javascript/book-script.js"></script>
<script src="/javascript/loginer-script.js"></script>
